generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  member Member?

  invites           Invite[]
  organizationOwner Organization?
  tokens            Token[]

  @@map("user")
}

model Token {
  id        String    @id @default(uuid())
  type      TokenType
  createdAt DateTime  @default(now()) @map("created_at")
  userId    String    @map("user_id")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tokens")
}

model Invite {
  id        String   @id @default(uuid())
  email     String
  role      Role
  createdAt DateTime @default(now()) @map("created_at")

  author   User?   @relation(fields: [authorId], references: [id])
  authorId String? @map("author_id")

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  @@unique([email, organizationId])
  @@index([email])
  @@map("invite")
}

model Member {
  id   String @id @default(uuid())
  role Role   @default(MEMBER)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique @map("user_id")

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String       @map("organization_id")

  clockinRegisters ClockinRegister[]

  @@index([organizationId], map: "idx_member_organization_id")
  @@map("member")
}

model ClockinRegister {
  id        String    @id @default(uuid())
  clockIn   DateTime  @map("clock_in")
  clockOut  DateTime? @map("clock_out")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  memberId String @map("member_id")
  member   Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  organizationId String       @map("organization_id")
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  projectId String  @map("project_id")
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("clockin_register")
}

model Organization {
  id                        String   @id @default(uuid())
  name                      String?
  slug                      String?  @unique
  domain                    String?  @unique
  shouldAttachUsersByDomain Boolean  @default(false) @map("should_attach_users_by_domain")
  avatarUrl                 String?  @map("avatar_url")
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String @unique @map("owner_id")

  invites          Invite[]
  members          Member[]
  projects         Project[]
  estimates        Estimate[]
  clockinRegisters ClockinRegister[]

  @@index([slug])
  @@map("organization")
}

model Address {
  id        String   @id @default(uuid())
  street    String
  city      String
  state     String
  zipCode   String   @map("zip_code")
  country   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  number    String

  projects  Project @relation(fields: [projectId], references: [id])
  projectId String  @unique @map("project_id")

  @@map("address")
}

model Project {
  id          String   @id @default(uuid())
  description String?
  photoUrls   String[] @map("photo_urls")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  concluded   Boolean  @default(false)

  organizationId String       @map("organization_id")
  organization   Organization @relation(fields: [organizationId], references: [id])

  address          Address?
  estimate         Estimate?
  clockinRegisters ClockinRegister[]

  @@map("project")
}

model Estimate {
  id          String         @id @default(uuid())
  description String?
  duration    Int
  value       Int
  status      EstimateStatus @default(PENDING)
  createdAt   DateTime       @default(now()) @map("created_at")
  validity    DateTime?

  projectId String  @unique @map("project_id")
  project   Project @relation(fields: [projectId], references: [id])

  organizationId String       @map("organization_id")
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@map("estimate")
}

enum TokenType {
  PASSWORD_RECOVER
}

enum EstimateStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  ADMIN
  MEMBER
}
